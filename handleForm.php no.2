<?php 
session_start();

// Check if a user is already logged in
if(isset($_SESSION['firstName'])) {
    // If a user is already logged in, display a message and redirect back to index.php
    $message = $_SESSION['firstName'] . " is already logged in, Wait for them to log out first";
    header('Location: index.php?message=' . urlencode($message));
    exit;
}

// Check if submitBtn exists
if(isset($_POST['submitBtn'])) {

    // Get the first name from index.php
    $firstName = $_POST['firstName'];

    // Get the password from the input field
    $password = md5($_POST['password']);

    // Set the session variables
    $_SESSION['firstName'] = $firstName;
    $_SESSION['password'] = $password;

    // Go back to index.php
    header('Location: index.php');
}

?>
